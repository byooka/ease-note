.list
  .panel
    // border 1px solid #999
    background: #fff
    color: #000
    .header
      position relative
      display: flex
      justify-content: center
      .title
        font-size: 16px
        font-weight: 400
      .setting
        position absolute
        right: 4px
    .list-container
      height: 100%
      display: flex
      flex-direction: column
      padding 4px 8px
      .search
        display flex
        border: 1px solid #999
        border-radius: 20px
        height: 32px
        line-height: 32px
        padding-left: 4px
        input
          flex: 1
          border-radius: 20px
      .content
        // flex 1
        margin-top 8px
        // height: 440px
        height: calc(100% - 80px)
        overflow-y: auto
        .item
          position relative
          box-sizing: border-box
          padding: 4px 8px
          margin 10px 0
          max-height: 96px
          background: #999
          border-radius: 4px
          overflow: hidden
          &.hide
            opacity .3
          &.bar
            &::before
              content ''
              position absolute
              width: 4px
              height: 100%
              left: 0
              background: rgb(230, 0, 0)
          .top
            display: flex
            justify-content: space-between
            align-items: center
            font-size: 12px
            margin-top: 2px
            .left
              display flex
              justify-content: flex-start
              align-items: center
              .title 
                width: 80px
                overflow: hidden
                white-space: nowrap
                text-overflow: ellipsis
                font-size: 16px
                font-weight: 500
                cursor pointer
              .time
                margin-left: 8px
            .option
              margin-right: 8px
